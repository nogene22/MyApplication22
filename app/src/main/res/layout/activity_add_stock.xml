<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30332E"
    android:padding="16dp">

    <!-- ID EditText -->
    <EditText
        android:id="@+id/idEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#F9DB6D"
        android:hint="ID"
        android:padding="8dp"
        android:textColorHint="#000000" />

    <!-- Name EditText -->
    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEditText"
        android:layout_marginTop="16dp"
        android:background="#F9DB6D"
        android:hint="Name"
        android:padding="8dp"
        android:textColorHint="#000000" />

    <!-- Company EditText -->
    <EditText
        android:id="@+id/companyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameEditText"
        android:layout_marginTop="16dp"
        android:background="#F9DB6D"
        android:hint="Company"
        android:padding="8dp"
        android:textColorHint="#000000" />

    <!-- Quantity EditText -->
    <EditText
        android:id="@+id/quantityEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyEditText"
        android:layout_marginTop="16dp"
        android:background="#F9DB6D"
        android:hint="Quantity"
        android:padding="8dp"
        android:textColorHint="#000000" />

    <!-- Date EditText -->
    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantityEditText"
        android:layout_marginTop="16dp"
        android:background="#F9DB6D"
        android:hint="Date"
        android:padding="8dp"
        android:textColorHint="#000000" />

    <!-- Quality EditText -->
    <EditText
        android:id="@+id/qualityEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateEditText"
        android:layout_marginTop="16dp"
        android:background="#F9DB6D"
        android:hint="Quality"
        android:padding="8dp"
        android:textColorHint="#000000" />

    <!-- Add Button -->

    <!-- Go Back Button -->
    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qualityEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="#167574"
        android:text="Add Stock"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/goBackButton"
        android:layout_width="104dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="148dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="40dp"
        android:background="#167574"
        android:text="HOME"
        android:textColor="#FFFFFF" />

</RelativeLayout>
